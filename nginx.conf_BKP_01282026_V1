server {
    listen 80;
    server_name learntute.com www.learntute.com;

    # Define the root directory for static files and the index file
    root /usr/share/nginx/html;
    index index.html;

    # Security headers to help protect your application
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "no-referrer-when-downgrade" always;

    # Enable gzip compression for performance
    gzip on;
    gzip_types text/plain text/css application/json application/javascript text/xml application/xml application/xml+rss text/javascript;
    gzip_min_length 256;

    # SPA routing: serve index.html for unmatched routes
    location / {
        try_files $uri $uri/ /index.html;
    }

    # Cache static assets for improved performance
    location ~* \.(?:css|js|jpg|jpeg|gif|png|svg|ico)$ {
        try_files $uri =404;
        expires 30d;
        access_log off;
    }

    # âœ… GraphQL API proxy (NO CORS, same-origin)
    location /graphql {
        proxy_pass http://codex-api.codex-api.svc.cluster.local:9000/graphql;
        proxy_http_version 1.1;

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # WebSocket proxy (unchanged)
    location /socket.io/ {
        proxy_pass http://codex-api.codex-api.svc.cluster.local:3000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "Upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }
}
